@page "/players"
@using BossFramework.BModels

<h3>Players</h3>

@foreach (var player in players)
{
    @player.Name
}

@code {
    BPlayer[] players = [];

    void GetPlayers()
    {
        players = BossFramework.BInfo.OnlinePlayers;
    }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        GetPlayers();
    }
}
